<MyLayout>:
    rows: 3
    cols: 2

    spacing: 20
    padding: 20
    row_default_height: 30

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Departure: "
            color: 0,0,0,1
            width: 50
            height: 35

        Label:
            text: "Arrival: "
            color: 0,0,0,1
            width: 50
            height: 35

        BoxLayout:
            orientation: "vertical"

            rows: 2
            cols: 2
            BoxLayout:
                orientation: "horizontal"
                rows: 2
                cols: 1
                Label:
                    text: "Departure: "
                    color: 0,0,0,1
                Label:
                    text: "Arrival: "
                    color: 0,0,0,1
            BoxLayout:
                orientation: "horizontal"
                rows: 2
                cols: 1

                spacing: 10

                TextInput:
                    id: departure
                    row_default_height: 30
                    multipleline: False
                    width: 50


                TextInput:
                    id: arrival
                    multipleline: False
                    width: 50

        TextInput:
            id: departure
            multipleline: False
            width: 50


        TextInput:
            id: arrival
            multipleline: False
            width: 50

        Button:
            text: "Search"
            size: 75, 50
            size_hint: None, None

        Button:
            text: "Submit"
            size: 75, 50
            size_hint: None, None
